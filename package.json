{
  "name": "busan-auction-ai-analyzer",
  "version": "2.0.0",
  "description": "부산경매 AI 분석 시스템 - 완전 개편 고도화 버전",
  "main": "src/app-optimized.js",
  "scripts": {
    "start": "node src/app-optimized.js",
    "dev": "nodemon src/app-optimized.js",
    "scrape": "node scripts/run-scraper.js", 
    "analyze": "node scripts/run-analyzer.js",
    "full": "node scripts/run-full-process.js",
    "setup-db": "node scripts/setup-database.js",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "lint": "eslint src/ --ext .js",
    "lint:fix": "eslint src/ --ext .js --fix",
    "build": "echo \"Production build completed\"",
    "pm2:start": "pm2 start ecosystem.config.js",
    "pm2:stop": "pm2 stop ecosystem.config.js",
    "pm2:restart": "pm2 restart ecosystem.config.js"
  },
  "keywords": [
    "auction",
    "busan",
    "real-estate", 
    "ai-analysis",
    "investment",
    "scraping",
    "socket.io",
    "performance",
    "caching"
  ],
  "author": {
    "name": "Claude AI Assistant",
    "email": "noreply@anthropic.com"
  },
  "license": "MIT",
  "dependencies": {
    "axios": "^1.7.9",
    "cheerio": "^1.0.0",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "express-rate-limit": "^7.1.5",
    "helmet": "^7.1.0",
    "node-cache": "^5.1.2",
    "node-cron": "^3.0.3",
    "pg": "^8.13.1",
    "puppeteer": "^24.0.0",
    "socket.io": "^4.8.0"
  },
  "devDependencies": {
    "@types/node": "^20.14.0",
    "@types/pg": "^8.11.10",
    "eslint": "^8.57.0",
    "jest": "^29.7.0",
    "nodemon": "^3.1.4",
    "pm2": "^5.3.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/araeLaver/busan-auction-analyzer.git"
  },
  "bugs": {
    "url": "https://github.com/araeLaver/busan-auction-analyzer/issues"
  },
  "homepage": "https://github.com/araeLaver/busan-auction-analyzer#readme",
  "jest": {
    "testEnvironment": "node",
    "coverageDirectory": "coverage",
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/app-optimized.js"
    ]
  },
  "eslintConfig": {
    "env": {
      "node": true,
      "es2021": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
      "ecmaVersion": "latest"
    },
    "rules": {
      "no-unused-vars": "warn",
      "no-console": "off"
    }
  }
}